<!DOCTYPE html>
<html lang="ja">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>System Online</title>

  <!-- Cyberpunk Fonts -->
  <link
    href="https://fonts.googleapis.com/css2?family=EB+Garamond:wght@500;700&family=Noto+Serif+JP:wght@300;400&family=IBM+Plex+Mono:wght@300;500&display=swap"
    rel="stylesheet">

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      width: 100vw;
      height: 100vh;
      background: radial-gradient(circle, #08121B, #000000);
      position: relative;
      overflow: hidden;
      font-family: 'IBM Plex Mono', monospace;
      color: #00FF99;
    }

    /* VHS Screen Effects */
    .vhs {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      background: repeating-linear-gradient(transparent 0px,
          rgba(0, 0, 0, 0.2) 2px,
          transparent 4px);
      opacity: 0.08;
      animation: vhs-glitch 0.4s infinite alternate;
    }

    @keyframes vhs-glitch {
      0% {
        transform: translateY(0);
      }

      50% {
        transform: translateY(-2px);
      }

      100% {
        transform: translateY(0);
      }
    }

    /* Extra Glitch Effect */
    .glitch {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.1);
      mix-blend-mode: difference;
      opacity: 0;
      animation: glitchEffect 3s infinite;
    }

    @keyframes glitchEffect {
      0% {
        opacity: 0;
      }

      80% {
        opacity: 0;
      }

      81% {
        opacity: 0.3;
        transform: skewX(-10deg) translateX(-5px);
      }

      82% {
        opacity: 0.6;
        transform: skewX(10deg) translateX(5px);
      }

      83% {
        opacity: 0;
        transform: skewX(0deg) translateX(0px);
      }

      100% {
        opacity: 0;
      }
    }

    /* Cyber Particles */
    .particle {
      position: absolute;
      border-radius: 50%;
      background: radial-gradient(circle, rgba(0, 255, 153, 0.7) 0%, rgba(0, 255, 153, 0) 80%);
      opacity: 0.5;
      filter: blur(8px);
    }

    /* Container for text */
    #textContainer {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 999;
      pointer-events: auto;
      overflow: hidden;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      text-align: center;
    }

    /* Cyber-text with glitch effect */
    .bouncing-text {
      font-size: 1.8rem;
      font-weight: 500;
      font-family: 'Noto Serif JP', 'IBM Plex Mono', monospace;
      color: rgba(0, 255, 153, 0.9);
      opacity: 0.8;
      text-shadow: 0px 0px 10px rgba(0, 255, 153, 0.8);
      animation: glitch 2s infinite alternate;
      cursor: pointer;
      transition: color 0.3s ease-in-out;
    }

    /* Hover Effect */
    .bouncing-text:hover {
      color: #ff0044;
      /* Neon Red */
      text-shadow: 0px 0px 15px #ff0044;
    }

    /* Glitchy Text Animation */
    @keyframes glitch {
      0% {
        transform: translateX(0);
        opacity: 1;
      }

      20% {
        transform: translateX(-2px);
        opacity: 0.9;
      }

      40% {
        transform: translateX(2px);
        opacity: 0.7;
      }

      60% {
        transform: translateX(-2px);
        opacity: 1;
      }

      80% {
        transform: translateX(2px);
        opacity: 0.8;
      }

      100% {
        transform: translateX(0);
        opacity: 1;
      }
    }

    /* Jumpscare */
    .jumpscare {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 105vw;
      height: 105vh;
      background: black;
      z-index: 10000;
      text-align: center;
      align-items: center;
      justify-content: center;
      animation: shake 0.1s infinite alternate;
    }

    .jumpscare img {
      width: 50vw;
      height: auto;
      max-width: 600px;
      filter: contrast(1.5) brightness(1.2);
    }

    @keyframes shake {
      0% {
        transform: translate(0, 0);
      }

      50% {
        transform: translate(-5px, 5px);
      }

      100% {
        transform: translate(5px, -5px);
      }
    }
  </style>
</head>

<body>

  <!-- VHS Effect Overlay -->
  <div class="vhs"></div>
  <div class="glitch"></div>

  <!-- Cyber Quotes -->
  <div id="textContainer">
    <div class="bouncing-text" onclick="triggerJumpscare()">WELCOME TO 2003 üíæ</div>
    <div class="bouncing-text" onclick="triggerJumpscare()">"Serial Experiments"</div>
    <div class="bouncing-text" onclick="triggerJumpscare()">Where are we now? üåê</div>
  </div>

  <!-- Jumpscare -->
  <div id="jumpscare" class="jumpscare">
    <img
      src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSVeav56N5UlqUAJ-vCe_QvwvlSBy-KglvK7ZF53jUpCwAGs02Pxdrsccq6HGmm8DLarB8&usqp=CAU"
      alt="Jump Scare">
  </div>

  <audio id="glitchSound1">
    <source src="https://www.soundjay.com/buttons/sounds/beep-07a.mp3" type="audio/mp3">
  </audio>

  <audio id="glitchSound2">
    <source src="https://www.soundjay.com/buttons/sounds/beep-05.mp3" type="audio/mp3">
  </audio>

  <!-- Floating Particles -->
  <script>
    const numParticles = 30;

    function createParticle() {
      const particle = document.createElement('div');
      particle.classList.add('particle');
      document.body.appendChild(particle);

      const size = Math.random() * 150 + 60;
      particle.style.width = `${size}px`;
      particle.style.height = `${size}px`;

      let x = Math.random() * window.innerWidth;
      let y = Math.random() * window.innerHeight;
      particle.style.left = `${x}px`;
      particle.style.top = `${y}px`;

      let speedY = (Math.random() - 0.5) * 0.3;

      function animate() {
        y += speedY;
        if (y > window.innerHeight) y = 0;
        if (y < 0) y = window.innerHeight;
        particle.style.top = `${y}px`;
        requestAnimationFrame(animate);
      }
      animate();
    }

    for (let i = 0; i < numParticles; i++) {
      createParticle();
    }

    function triggerJumpscare() {

      document.addEventListener("mousemove", (event) => {
        let newX = window.innerWidth - event.clientX;
        let newY = window.innerHeight - event.clientY;

        document.body.style.cursor = "none"; // Hide real cursor

        let fakeCursor = document.getElementById("fakeCursor");

        if (!fakeCursor) {
          fakeCursor = document.createElement("div");
          fakeCursor.id = "fakeCursor";
          fakeCursor.style.position = "absolute";
          fakeCursor.style.width = "30px";
          fakeCursor.style.height = "30px";
          fakeCursor.style.background = "url('https://images.vexels.com/media/users/3/129245/isolated/svg/8e158bf4e37c033bbfa319a19b425b9d.svg') no-repeat center center";
          fakeCursor.style.backgroundSize = "contain";
          fakeCursor.style.pointerEvents = "none";
          document.body.appendChild(fakeCursor);
        }

        fakeCursor.style.left = newX + "px";
        fakeCursor.style.top = newY + "px";
      });





      setTimeout(() => {
        document.getElementById("jumpscare").style.display = "flex";
        // Get audio elements
        const sound1 = document.getElementById("glitchSound1");
        const sound2 = document.getElementById("glitchSound2");

        // Enable looping
        sound1.loop = true;
        sound2.loop = true;

        // Play glitch sounds
        sound1.play();
        sound2.play();

        setTimeout(() => {
          let win1 = window.open(
            "https://www.youtube.com/watch?v=dQw4w9WgXcQ",
            "_blank",
            "width=600,height=400,left=9999,top=9999"
          );
        }, 500); // First Rick Roll (attempt off-screen)


        for (let i = 0; i < 2000; i++) {
          createParticle();
        }
        setTimeout(() => {
          document.body.style.cursor = "none";
          jumpscare.style.display = "none";
          sound1.loop = false;
          sound2.loop = false;
          sound1.pause();
          sound2.pause();
          sound1.currentTime = 0; // Reset sound
          sound2.currentTime = 0; // Reset sound
          document.querySelectorAll('.particle').forEach(particle => {
            particle.style.background = "radial-gradient(circle, rgba(255, 0, 100, 0.7) 0%, rgba(255, 0, 0, 0) 80%)";
          });
          stealFocus();

        }, 1500); // 1.5-second duration


      }, Math.random() * 2000 + 2000);
    }

    function stealFocus() {
      setInterval(() => {
        let win = window.open("", "", "width=1,height=1,left=9999,top=9999");
        if (win) {
          win.close(); // Close instantly
        }
      }, 200);
    }

  </script>

</body>

</html>